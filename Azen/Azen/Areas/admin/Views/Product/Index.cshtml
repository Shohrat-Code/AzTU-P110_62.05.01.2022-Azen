@model List<Product>
@{
    ViewData["Title"] = "Index";
}

<div class="container">
    <div class="row">
        <div class="col-lg-12">
            <div class="col-lg-12 mb-5">
                <a asp-area="admin" asp-controller="product" asp-action="create" class="btn btn-primary">Create</a>
            </div>
            <hr />
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Name</th>
                        <th scope="col">About</th>
                        <th scope="col">SKU</th>
                        <th scope="col">Category</th>
                        <th scope="col">Brand</th>
                        <th scope="col">Description</th>
                        <th scope="col">Date</th>
                        <th scope="col"></th>
                    </tr>
                </thead>
                <tbody>
                    @{int i = 0; }
                    @foreach (var item in Model)
                    {
                        i++;
                        <tr>
                            <th scope="row">@i</th>
                            <td>@item.Name</td>
                            <td>@(item.About.Length>150? item.About.Substring(0,150)+"...": item.About)</td>
                            <td>@item.SKU</td>
                            <td>@item.ProductCategory.Name</td>
                            <td>@item.Brand.Name</td>
                            <td>@(item.Description.Length>150? item.Description.Substring(0,150)+"...": item.Description)</td>
                            <td>---</td>
                            <td>
                                <a asp-area="admin" asp-controller="product" asp-action="update" asp-route-id="@item.Id" class="btn btn-success">Update</a>
                                <a asp-area="admin" asp-controller="product" asp-action="delete" asp-route-id="@item.Id" onclick="return confirm('Are you sure?')" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>